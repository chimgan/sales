rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Items collection - public read, open write for development
    match /items/{itemId} {
      allow read: if true;
      allow create, update, delete: if true; // TODO: Secure for production
    }
    
    // Categories collection - public read, open write for development
    match /categories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if true; // TODO: Secure for production
    }
    
    // Tags collection - public read, open write for development
    match /tags/{tagId} {
      allow read: if true;
      allow create, update, delete: if true; // TODO: Secure for production
    }
    
    // Inquiries collection
    match /inquiries/{inquiryId} {
      allow read: if true; // Allow reading for admin panel
      allow create: if true;
      allow update, delete: if true; // TODO: Secure for production
    }
  }
}
